{
  "routes": [
    {
      "src": "/.*",
      "middlewarePath": "middleware.js",
      "continue": true
    }
  ],
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    {
      "src": "middleware.js",
      "use": "@vercel/node",
      "config": { "middleware": true }
    }
  ],
  "probes": [
    {
      "path": "/api/edge.js",
      "status": 200,
      "responseHeaders": {
        "x-modified-edge": "true"
      }
    },
    {
      "path": "/non-exist",
      "status": 404,
      "responseHeaders": {
        "x-modified-edge": "true"
      }
    }
  ]
}
